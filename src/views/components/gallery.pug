section.gallery.container
    h2.gallery__title
        | GoboPro 
        span.text-accent Cases
    .gallery__container
        .gallery__container__left
            a.gallery__container__left__item(href="@/assets/resources/gobo.mp4" data-fancybox="gallery")
                video.gallery__video(controls)
                    source(src="@/assets/resources/gobo.mp4") 
        .gallery__container__right
            a.gallery__container__right__item(href="@/assets/images/gallery2.png" data-fancybox="gallery")
                img(src='@/assets/images/gallery2.png')
            a.gallery__container__right__item(href="@/assets/images/gallery3.png" data-fancybox="gallery")
                img(src='@/assets/images/gallery3.png')
            a.gallery__container__right__item(href="@/assets/images/gallery4.png" data-fancybox="gallery")
                img(src='@/assets/images/gallery4.png')
            a.gallery__container__right__item(href="@/assets/images/gallery5.png" data-fancybox="gallery")
                img(src='@/assets/images/gallery5.png')
